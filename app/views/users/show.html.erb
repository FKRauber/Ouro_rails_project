<p id="notice"><%= notice %></p>

<% if @message %>
	<div class="center alert">
		<p><%= @message %></p>
	</div>
<% end %>

<div class="center">
	<div class="info">
		<% if @user.admin %>
			<p><strong>ADMIN</strong></p>
		<% end %>
		<p><strong>NAME: </strong><%= @user.name %></p>
		<p><%= link_to 'Edit', edit_user_path(@user) %></p>
		<p><%= link_to 'See Treasure', treasures_path %></p>
	</div>
</div>
