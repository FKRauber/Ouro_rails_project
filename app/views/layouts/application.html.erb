<!DOCTYPE html>
<html>
  <head>
    <title>Ouro Rails Project</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <a class="navbar-brand" href="<%= root_url %>"/>Home</a>
      <ul class="nav navbar-nav">
        <% if current_user %>
          <li><%= link_to "Hello, #{current_user.username}!", user_path(current_user) %></li>
          <li><%= link_to "Treasures", treasures_path %></li>
          <li><%= link_to "Log Out", signout_path, method: :delete %></li>
        <% else %>
          <li><%= link_to "Sign Up", new_user_path %></li>
          <li><%= link_to "Sign In", signin_path %></li>
        <% end %>
      </ul>
    </div>

    <div class="container" role="main">
     <%= yield %>
    </div>
  </body>
</html>
