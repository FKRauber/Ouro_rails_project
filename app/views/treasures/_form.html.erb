<%= form_for @treasure do |f| %>
	
	<%= f.label :name %><br><%= f.text_field :name, class: "form-control" %><br>
	<%= f.label :description %><br><%= f.text_area :description, class: "form-control" %><br>

	<%= f.fields_for :theories do |theory| %>
		<%= theory.label :name %><%= theory.text_field :name %><br>
		<%= theory.label :description %><%= theory.text_area :description %><br>
		<%= theory.label :issues %><%= theory.text_field :issues %><br>
		<%= theory.label :success %><%= theory.check_box :success %><br>
		<%= theory.label :prove_date %><%= theory.date_field :prove_date %><br>
	<% end %>
		
	<%= f.submit class: "btn btn-primary" %>

<% end %>