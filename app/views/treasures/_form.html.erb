<%= form_for @treasure do |f| %>
	<div class="form-group">
		<%= f.label :name %><br><%= f.text_field :name, class: "form-control" %>
	</div><br>

	<div class="form-group">
		<%= f.label :description %><br><%= f.text_field :description, class: "form-control" %>
	</div><br>

	<div class="actions">
		<%= f.submit class: "btn btn-primary" %>
	</div>

<% end %>