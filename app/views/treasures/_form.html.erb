<%= form_for @treasure do |f| %>
	
	<%= f.label :name %><br><%= f.text_field :name, class: "form-control" %><br>
	<%= f.label :description %><br><%= f.text_area :description, class: "form-control" %><br>
	
	<!-- THEORY FIELDS -->
 	<%= f.fields_for :theories, @treasure.theories.build do |theories_fields| %>
		Name: <%= theories_fields.text_field :name %>
		Description: <%= theories_fields.text_area :description %>
		Issues: <%= theories_fields.text_area :issues %>
		Success: <%= theories_fields.check_box :success %>
		Date Proven: <%= theories_fields.date_field :prove_date %>
	<% end %>
	
	<%= f.submit class: "btn btn-primary" %>

<% end %>