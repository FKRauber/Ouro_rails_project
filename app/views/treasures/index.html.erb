<h1>List of Treasures</h1>

<table class="table">
  <thead>
    <tr><th colspan="2"></th></tr>
  </thead>
  <tbody>
    <tr>
      <td><strong>Name</strong></td>
      <td><strong>Description</strong></td>
    </tr>

    <% @treasures.each do |treasure| %>
      <tr>
        <td><%= treasure.name %></td>
        <td><%= treasure.description %></td>
        <% if current_user.admin %>
          <td><%= link_to "Show #{treasure.name}", treasure_path(treasure) %></td>
        <% else %>
          <td><%= link_to "Find #{treasure.name}", treasure_path(treasure) %></td>
        <% end %>
        <ul>
          <% treasure.theories.each do |t| %>
            Theory Name: <li><%= t.name %></li><br>
            Theory Description: <li><%= t.description %></li><br>
            Theory Issues: <li><%= t.issues %></li><br>
            Theory Success? <li><%= t.success %></li><br>
            Theory Prove Date: <li><%= t.prove_date %></li><br>
          <% end %>
        </ul> 
      </tr>
    <% end %>
  </tbody>
</table><br>

<p><%= link_to "New Treasure", new_treasure_path %></p>
