<h1>List of Treasures</h1>

<table class="table">
  <thead>
    <tr><th colspan="2"></th></tr>
  </thead>
  <tbody>
    <tr>
      <td><strong>Name</strong></td>
      <td><strong>Description</strong></td>
    </tr>

    <% @treasures.each do |treasure| %>
      <tr>
        <td><%= treasure.name %></td>
        <td><%= treasure.description %></td>
        <% if current_user.admin %>
          <td><%= link_to "Show #{treasure.name}", treasure_path(treasure) %></td>
        <% else %>
          <td><%= link_to "Find #{treasure.name}", treasure_path(treasure) %></td>
        <% end %>
        <td><strong>Theory Name</strong></td>
          <% @treasures.theories.each do |theory| %>
            <td><%= theory.name %></td>
            <td><%= theory.description %></td>
            <td><%= theory.issues %></td>
            <td><%= theory.success %></td>
            <td><%= theory.prove_date %></td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table><br>

<p><%= link_to "New Treasure", new_treasure_path %></p>
