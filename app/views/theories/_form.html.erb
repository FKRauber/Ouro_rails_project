<%= form_for @theory do |f| %>
	<div class="form-group">
		<%= f.label :name %><br><%= f.text_field :name, class: "form-control" %>
	</div>

	<div class="form-group">
		<%= f.label :description %><br><%= f.text_field :description, class: "form-control" %>
	</div>

		<div class="form-group">
		<%= f.label :issues %><br><%= f.text_field :issues, class: "form-control" %>
		<!-- ADD NESTED FORM ELEMENTS : DESCRIPTION, STATUS, COMPLETE -->
	</div>

		<div class="form-group">
		<%= f.label :success %><br><%= f.check_box :success, class: "form-control" %>
	</div>

		<div class="form-group">
		<%= f.label :prove_date %><br><%= f.date_field :prove_date, class: "form-control" %>
	</div>

	<div class="actions">
		<%= f.submit class: "btn btn-primary" %>
	</div>

<% end %>